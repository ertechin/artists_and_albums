<%= turbo_frame_tag 'album_detail_card' %>

<div class="flex flex-col md:flex-row mx-auto w-full">
  <div class="md:w-1/3 p-4">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @user %>
  </div>
  <div class="md:w-2/3 p-4 border rounded-lg mt-4">
      <h2 class="text-xl px-6 font-semibold mb-4">Artist Albums</h2>
      <% @user.albums.each do |album| %>
        <%= render 'albums/album_list_album_section', album: %>
      <% end %>
  </div>
</div>